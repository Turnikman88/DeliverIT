@model IEnumerable<CustomerDTO>
<div class="col" style="width:auto; height:400px; overflow:auto; padding: 15px;">
    <table class="table-custom">
        <tr>
            <th scope="col">CustomerID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Country</th>
            <th scope="col">City</th>
            <th scope="col">AddressId</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <th scope="col">No Customers were found!</th>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td scope="col">@item.Id</td>
                <td scope="col">@item.FirstName</td>
                <td scope="col">@item.LastName</td>
                <td scope="col">@item.Email</td>
                <td scope="col">@item.Country</td>
                <td scope="col">@item.City</td>
                <td scope="col">@item.AddressId</td>
                <td scope="col"><button class="btn btn-outline-danger btn-sm" onclick="ExecuteEmptyAjax('@Url.Action("Delete", "Customer", new { id = item.Id})')">Delete</button></td>
            </tr>
        }
    </table>
</div>
