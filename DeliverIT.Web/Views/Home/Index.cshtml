@model IndexViewModel
@section Styles{
    <link rel="stylesheet" href="~/css/counter-anmation.css">
}
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Counter-Up/1.0.0/jquery.counterup.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.counter').counterUp({
                delay: 10,
                time: 1200
            });
        });
    </script>
}
@{ 
    var r = new Random();
    int rNum = r.Next(3, 15);
}
<div class="counter-up" style="padding-top: 80px;">
    <div class="content">
        <div class="box">
            <div class="icon"><i class="fa fa-trophy"></i></div>
            <div class="counter">@rNum</div>
            <div class="text">Achievements</div>
        </div>

        <div class="box">
            <div class="icon"><i class="fa fa-users"></i></div>
            <div class="counter">@Model.UserCount</div>
            <div class="text">Happy Clients</div>
        </div>
            
        <div class="box">
            <div class="icon"><i class="fa fa-home"></i></div>
            <div class="counter">@Model.WarehouseCount</div>
            <div class="text">Warehouses</div>
        </div>
    </div>
</div>


<div class="services-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <span>Locations</span>
                    <h2>Our Warehouses</h2>
                    <p>Quisque sagittis blandit sapien et elementum. Fusce pretium viverra consequat. Aliquam at feugiat mi. Pellentesque hendrerit, felis ac sodales commodo.</p>
                </div>
            </div>

            <div class="col flex-sm-wrap-reverse ">
                <img src="@Constants.DOMAIN_NAME/images/warehouse.png" alt="DeliverIT login image" style="width:100%; height: auto; min-width: 400px;" />
            </div>

            <div class="col-6" style="height:420px;width:1900px;overflow:auto;background-color:transparent;color:white;scrollbar-base-color:gold;font-family:sans-serif;padding:10px;">

                @foreach (var item in Model.WarehouseLocations)
                {
                    string url = $"{item.Address}%20{item.City}%20{item.Country}";
                    <div class="col-md-4 col-md-10 col-xs-12">
                        <div class="service-item">
                            <i class="fa fa-map-marker"></i>
                            <h4>@item.City, @item.Address</h4>
                            <div class="map-responsive">
                                <iframe src="https://maps.google.com/maps?width=300&amp;height=300&amp;hl=en&amp;q=@(url)/&amp;t=&amp;z=16&amp;ie=UTF8&amp;iwloc=B&amp;output=embed" width="300" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

