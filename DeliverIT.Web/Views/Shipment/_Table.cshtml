@model ShipmentViewModel
<div class="col" style="width:auto; height:400px; overflow:auto; padding: 15px;">
    <table class="table-custom">
        <tr>
            <th scope="col">Shipment Id</th>
            <th scope="col">Departure Date</th>
            <th scope="col">Arrival Date</th>
            <th scope="col">Origin Warehouse Id</th>
            <th scope="col">Destination Warehouse Id</th>
            <th scope="col">Status</th>
            <th scope="col"><button class="btn btn-outline-success" onclick="showInPopup('@Url.Action("Create", "Shipment")', 'Create')">Add New</button></th>
        </tr>
        @if (Model.Shipments.Count() == 0)
        {
            <tr>
                <th scope="col">No Shipments were found!</th>
            </tr>
        }
        @foreach (var item in Model.Shipments)
        {
            <tr>
                <td scope="col">@item.Id</td>
                <td scope="col">@item.DepartureDate</td>
                <td scope="col">@item.ArrivalDate</td>
                <td scope="col">@item.OriginWareHouseId</td>
                <td scope="col">@item.DestinationWareHouseId</td>
                <td scope="col">@item.Status</td>
                <td scope="col"><button class="btn btn-outline-primary btn-sm" onclick="showInPopup('@Url.Action("Update", "Shipment", new { id = item.Id})', 'Update')">Edit</button></td>
                <td scope="col"><button class="btn btn-outline-danger btn-sm" onclick="ExecuteEmptyAjax('@Url.Action("Delete", "Shipment", new { id = item.Id})')">Delete</button></td>
            </tr>
        }
    </table>
</div>
