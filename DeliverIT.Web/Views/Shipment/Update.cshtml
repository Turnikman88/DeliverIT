@model ShipmentViewModel
@section Styles{
    <link rel="stylesheet" href="~/css/form.css">
}
@{
    Layout = "/Views/Shared/_LayoutEmpty.cshtml";
}

<div class="row">
    <div class="col">
        <form asp-action="Update" onsubmit="return jQueryAjaxPost(this);">
            <div>
                <label>Departure Date</label>
                <input asp-for="DepartureDate" placeholder="Departure Date" class="fourth" style="color: #737373; margin:-10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="DepartureDate" class="form-error"></span>
                <label>Arrival Date</label>
                <input asp-for="ArrivalDate" placeholder="Arrival Date" class="fourth" style=" color: #737373; margin: -10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="ArrivalDate" class="form-error"></span>
                <label>Origin Warehouse Id</label>
                <input asp-for="OriginWareHouseId" placeholder="Origin WareHouse Id" class="fourth" style="margin:-10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="OriginWareHouseId" class="form-error"></span>
                <label>Destinantion Warehouse Id</label>
                <input asp-for="DestinationWareHouseId" placeholder="Destinantion WareHouse Id" class="fourth" style="margin:-10px 0 10px 0; width: 100%;" />
                <span asp-validation-for="DestinationWareHouseId" class="form-error"></span>
                <select asp-for="StatusId" asp-items="Model.Statuses" style="margin:5px 0 10px 0; width: 100%;"></select>
                <span asp-validation-for="Status" class="form-error"></span>
            </div>
            <div style="text-align: center">
                <input type="submit" value="Update" class="fourth" style="margin: auto;" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}